<Window x:Class="DeepDiveIntoOOP.Part2WpfApp.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeepDiveIntoOOP.Part2WpfApp"
        mc:Ignorable="d"
        Title="Добавить клиента" Height="400" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBox x:Name="LastNameTextBox" Tag="Фамилия" Margin="5" Width="250"/>
            <TextBox x:Name="FirstNameTextBox" Tag="Имя" Margin="5" Width="250"/>
            <TextBox x:Name="MiddleNameTextBox" Tag="Отчество" Margin="5" Width="250"/>
            <TextBox x:Name="PhoneNumberTextBox" Tag="Телефон" Margin="5" Width="250"/>
            <TextBox x:Name="PassportTextBox" Tag="Серия и номер паспорта" Margin="5" Width="250"/>

            <Button Content="Добавить клиента" Width="150" Margin="5" HorizontalAlignment="Center" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
